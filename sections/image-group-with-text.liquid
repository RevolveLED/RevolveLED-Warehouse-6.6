{{ 'image-group-with-text.css' | asset_url | stylesheet_tag }}
{%- capture section_settings -%}
{
  {% comment %} "slidesPerGroup": 4 {% endcomment %}
  {% comment %} "slidesPerGroupMobile": 2 {% endcomment %}
}
{%- endcapture -%}
{% liquid
  if section.settings.image_lazy
    assign image_lazy = 'lazy'
  else
    assign image_lazy = ''
  endif
%}
<section
  class="section image-group-with-text index-section"
  data-section-id="{{ section.id }}"
  data-section-type="image-group-with-text"
  data-section-settings="{{ section_settings | escape_once }}"
>
  <div
    class="image-group-with-text-section__container container"
  >
    {%- if section.blocks.size > 0 -%}
      <div class="image-group-with-text-section__image-container">
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide image-group-with-text-section__image-slide" {{ block.shopify_attributes }}>
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: block.settings.image.width
                    | image_tag: loading: image_lazy, class: 'image-group-with-text-section__image', width: 725
                  }}
                {%- endif -%}
              </div>
            {% endfor %}
          </div>
          <div class="custom-swiper-pagination swiper-pagination"></div>
        </div>
      </div>
    {%- endif -%}
    <div class="image-group-with-text-section__content-container">
      {%- if section.settings.title != blank -%}
        <header class="section__header index-section__header">
          <h2 class="heading h3 index-section__title">{{ section.settings.title }}</h2>
        </header>
      {%- endif -%}
      {%- if section.settings.content != blank -%}
        <p class="image-group-with-text-section__content__description">{{ section.settings.content }}</p>
      {%- endif -%}
      {%- if section.settings.link != blank and section.settings.link_text != blank -%}
        <a
          class="image-group-with-text-section__content__link"
          href="{{ section.settings.link }}"
          aria-label="{{ section.settings.link_text }}"
          title="{{ section.settings.link_text }}"
        >
          {{- section.settings.link_text -}}
        </a>
      {%- endif -%}
      {%- if section.blocks.size > 1 -%}
        <div class="custom-swiper-button__container">
          <div class="custom-swiper-button swiper-button-prev">
            {% render 'icon', icon: 'custom-swiper-prev' %}
          </div>
          <div class="custom-swiper-button swiper-button-next">
            {% render 'icon', icon: 'custom-swiper-next' %}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Image group & text",
  "settings": [
    {
      "type": "checkbox",
      "id": "image_lazy",
      "label": "Image lazy loading",
      "default": false
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Start Your Project"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Image group & text",
      "settings": {}
    }
  ]
}
{% endschema %}
